<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.effect.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>


<?import com.jfoenix.controls.JFXButton?>
<StackPane fx:id="container" xmlns:tools="http://schemas.android.com/tools" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
<VBox  prefHeight="380" prefWidth="640" style="-fx-alignment: top_center;">
   <children>
      <Label id="tvTest" cacheHint="ROTATE" depthTest="DISABLE">
         <font>
            <Font size="27.0" />
         </font>
         <VBox.margin>
            <Insets top="60.0" />
         </VBox.margin>
      </Label>
      <HBox prefHeight="51.0" prefWidth="640.0">
         <children>
            <Label style="-fx-alignment: center;" text="用户名" textFill="black">
               <font>
                  <Font size="16.0" />
               </font>
               <HBox.margin>
                  <Insets left="200.0" top="40.0" />
               </HBox.margin>
            </Label>
            <TextField promptText="请输入用户名" focusTraversable="false" fx:id="tvUsername">
               <HBox.margin>
                  <Insets left="20.0" top="40.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox prefHeight="100.0" prefWidth="200.0">
         <children>
            <Label style="-fx-alignment: center;" text="密   码" focusTraversable="true" textFill="black">
               <font>
                  <Font size="16.0" />
               </font>
               <HBox.margin>
                  <Insets left="200.0" top="20.0" />
               </HBox.margin>
            </Label>
            <PasswordField  promptText="请输入密码" fx:id="tvPassword">
               <HBox.margin>
                  <Insets left="20.0" top="20.0" />
               </HBox.margin>
            </PasswordField >
         </children>
      </HBox>
      <JFXButton prefHeight="30" text="确  定" fx:id="btnLogin" maxHeight="30">
         <VBox.margin>
            <Insets top="50.0" left="20"/>
         </VBox.margin>
      </JFXButton>
   </children>
   <opaqueInsets>
      <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
   </opaqueInsets>
   <cursor>
      <Cursor fx:constant="DISAPPEAR" />
   </cursor>
   <effect>
      <Blend mode="SOFT_LIGHT" />
   </effect>
</VBox>
</StackPane>